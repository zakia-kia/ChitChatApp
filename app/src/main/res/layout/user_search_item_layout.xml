<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_search"
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_60dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/tv_username_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_12dp"
        android:layout_toRightOf="@+id/iv_profile_search"
        android:text="@string/text_user_name"
        android:textSize="@dimen/_19sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_18dp"
        android:layout_below="@id/tv_username_search"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_toEndOf="@id/iv_profile_search"
        android:layout_toRightOf="@id/tv_username_search"
        android:src="@drawable/ic_profile"
        android:visibility="gone"
        app:civ_border_color="#05df29"
        app:civ_border_width="@dimen/_12dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="@dimen/_18dp"
        android:layout_height="@dimen/_18dp"
        android:layout_below="@id/tv_username_search"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_toEndOf="@id/iv_profile_search"
        android:layout_toRightOf="@id/tv_username_search"
        android:src="@drawable/ic_profile"
        android:visibility="gone"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="@dimen/_12dp" />

    <TextView
        android:id="@+id/tv_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_below="@id/tv_username_search"
        android:layout_toEndOf="@id/iv_profile_search"
        android:maxLines="1"
        android:padding="@dimen/_6dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_19sp"/>

</RelativeLayout>